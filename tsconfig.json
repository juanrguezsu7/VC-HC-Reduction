{
  "compilerOptions": {
    "target": "es2022",
    "module": "ES2022",
    "allowJs": true,
    "rootDir": "./",
    "outDir": "./",
    // "mapRoot": "./map",
    "declarationDir": "./dist",
    // "sourceRoot": "./src",
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": false,
    "moduleResolution": "node",
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "build",
    "lib",
    "test",
    "public"
  ]
}
